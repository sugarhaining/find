.container {
  width: 100%;
  padding: 10rpx 20rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  box-shadow: 2rpx 2rpx 40rpx 2rpx #eee;
  margin-top: 30rpx;
  border-radius: 20rpx;
  position: relative;
}
.avatar {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.avatar image {
  width: 80rpx;
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 50%;
  margin-left: 10rpx;
}
.avatar .nick-name {
  font-size: 34rpx;
  margin-left: 10rpx;
}
.avatar .mood {
  align-self: flex-start;
  font-size: 26rpx;
}
.content {
  font-size: 26rpx;
  padding: 10rpx 0 10rpx 20rpx;
  box-sizing: border-box;
  text-indent: 2em;
}
.operate {
  margin-top: 20rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.time {
  font-size: 26rpx;
  color: #ccc;
}
.comment-reply {
  width: 40rpx;
  height: 40rpx;
}
.reply-area {
  width: 100%;
  padding: 4rpx 10rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.reply-area textarea {
  width: 100%;
  padding: 10rpx 10rpx;
  box-sizing: border-box;
  border: 1rpx #eee solid;
  font-size: 28rpx;
}
.reply-area .menus {
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.reply-area .menus button {
  width: 140rpx;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  background-color: #FFD531;
}
.reply-area .menus button:first-child {
  background-color: white;
}
.hr {
  width: 100%;
  height: 0;
  margin: 20rpx 0 10rpx 0;
  border: 1rpx solid #eee;
}
.reply {
  position: relative;
  font-size: 26rpx;
  color: #bbb;
  margin-left: 50rpx;
  text-indent: 0.5em;
}
.reply::after {
  content: '';
  position: absolute;
  left: -10rpx;
  top: 10rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #FFD531;
  opacity: .6;
}