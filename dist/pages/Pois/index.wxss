.container {
  background-color: #fffafa;
}
.title {
  width: 100vw;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #FFD531;
  -webkit-clip-path: ellipse(90vw 100rpx at 50% 0);
          clip-path: ellipse(90vw 100rpx at 50% 0);
  font-size: 40rpx;
  color: white;
}
.swiper {
  width: 100vw;
  height: 260rpx;
  margin-top: 10rpx;
}
.swiper .item {
  width: 100%;
  height: 100%;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}
.swiper .item image {
  width: 100%;
  height: 100%;
  border-radius: 40rpx;
}
.pois {
  width: 100vw;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  background-color: transparent;
}
.poi {
  width: 46vw;
  margin-bottom: 20rpx;
  margin-left: 2vw;
  margin-right: 2vw;
  padding-bottom: 10rpx;
  height: 400rpx;
  border-radius: 10rpx 10rpx 0 0;
  background-color: white;
  font-size: 25rpx;
}
.poi > image {
  width: 100%;
  height: 240rpx;
  border-radius: 10rpx 10rpx 0 0;
}
.poi .name {
  height: 68rpx;
  font-size: 30rpx;
  line-height: 34rpx;
  font-weight: 600;
  margin-top: 10rpx;
}
.poi .addr {
  margin-top: 20rpx;
  color: #bbb;
}
.poi .distance {
  display: inline-block;
  padding: 4rpx 6rpx;
  background-color: #bbb;
  color: #FFD531;
  margin-left: 6rpx;
  border-radius: 10rpx;
}