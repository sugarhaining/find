.container {
  width: 100vw;
  height: 100vh;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.button {
  margin-top: -20rpx;
  width: 500rpx;
  height: 100rpx;
  border-radius: 60rpx;
  line-height: 100rpx;
  background-color: #FFD531;
  font-size: 36rpx;
  color: #fff;
  box-shadow: 0 6rpx 30rpx 1rpx #eee;
}
.button::after {
  display: none;
}